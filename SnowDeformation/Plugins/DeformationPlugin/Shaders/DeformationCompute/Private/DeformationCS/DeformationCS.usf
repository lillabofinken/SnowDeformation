		//}
		//SnowDepth = saturate(SnowDepth - 1.0f * xyInRangeMask);
		SnowDepth = saturate(xyInRangeMask);
		//SnowDepth = frac(length(sqrt(xyDistanceSquared)/100));
	}
	
	{
		//float distanceFrac = frac(length(PixelPosition - ObjectPosition) * 0.01);
